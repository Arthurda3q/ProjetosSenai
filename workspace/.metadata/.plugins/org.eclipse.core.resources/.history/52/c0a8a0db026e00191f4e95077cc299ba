import java.util.Random;


public class BuscaPalavra {

	public static void main(String[] args) {
		Random random = new Random();
		int[][] matz = new int[10][10];
		
		String palavra = "java".toUpperCase();
		int il = random.nextInt(10); //Indice da linha
		int ic = random.nextInt(7); //Indice da coluna
		
		for (int i = 0; i < palavra.length(); i++) {
			matz [il][ic+i] = (int) palavra.charAt(i);
		}
		
		char ch = 0;
		for (int l = 0; l < 10; l++) { //linha
			for (int c = 0; c < 10; c++) {//coluna
				if (matz [l][c] == 0){
					matz[l][c] = 65+ random.nextInt(23);
			}
				System.out.print((char)matz[l][c]);
			}
			System.out.println();
		}
		
	}

}
